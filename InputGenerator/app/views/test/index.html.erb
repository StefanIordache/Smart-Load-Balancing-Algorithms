<div class="row justify-content-md-center">

    <h1 class="p-3 pb-5">Generate Input and Test Load Balancing Algorithms</h1>
    <div class="col col-lg-6">
        <div class="form-group pb-2">
            <label for="label-title">Simulation Title</label>
            <input type="text" class="form-control" id="input-title" aria-describedby="title-help"
                placeholder="Enter Title">
            <small id="title-help" class="form-text text-muted">Give your simulation a title.</small>
        </div>
        <label for="label-input-type">Input Type</label>
        <div class="form-check pb-2">
            <input class="form-check-input" type="radio" name="radio-input-type" id="radio-input-type-1"
                value="option-json" checked>
            <label class="form-check-label" for="label-radio-input-1">
                Use JSON Format
            </label>
        </div>
        <div class="form-check pb-2">
            <input class="form-check-input" type="radio" name="radio-input-type" id="radio-input-type-2"
                value="option-gui">
            <label class="form-check-label" for="label-radio-input-2">
                Use Graphical Interface
            </label>
        </div>

        <div id="mode-json" style="width: 100%; height: 100%;">
            <div id="jsoneditor" class="pt-3 pb-4" style="width: 100%; height: 100%;"></div>
        </div>

        <div id="mode-gui" hidden="true">
            Graphical Interface
        </div>

        <div class="form-group pb-2">
            <label for="label-description">Description</label>
            <textarea class="form-control" id="input-description" rows="3" placeholder="Enter Description"></textarea>
        </div>
    </div>
</div>


<script>
    // create the editor
    var container = document.getElementById("jsoneditor");
    var options = {
        mode: 'code'
    };
    var editor = new JSONEditor(container, options);

    // set json
    var json = {
        "Array": [1, 2, 3],
        "Boolean": true,
        "Null": null,
        "Number": 123,
        "Object": {
            "a": "b",
            "c": "d"
        },
        "String": "Test"
    };
    editor.set(json);

    // get json
    var json = editor.get();
</script>